// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  googleId       String   @id @unique @map("google_id")
  email          String   @unique
  name           String
  profilePicture String   @map("profile_picture")
  createdDate    DateTime @default(now()) @map("created_date")
  goals          Goal[]
  extraData      Json?    @map("extra_data") // bio

  @@map("user")
}

model Goal {
  id           Int       @id @default(autoincrement())
  title        String
  userId       String    @map("user_id")
  user         User      @relation(fields: [userId], references: [googleId])
  createdDate  DateTime  @default(now()) @map("created_date")
  targetDate   DateTime? @map("target_date")
  startValue   Int       @map("start_value")
  currentValue Int       @map("current_value")
  targetValue  Int       @map("target_value")
  interval     Int?
  isActive     Boolean   @default(true) @map("is_active")
  extraData    Json?     @map("extra_data") // description, color

  @@index([userId])
  @@map("goal")
}
